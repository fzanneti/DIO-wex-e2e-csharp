# Etapa 1: build
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copia apenas o csproj e restaura as dependências
COPY JarbasBot/*.csproj ./JarbasBot/
WORKDIR /src/JarbasBot
RUN dotnet restore

# Agora copia o restante dos arquivos e compila
COPY . /src
RUN dotnet publish -c Release -o /app/publish

# Etapa 2: runtime
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime
WORKDIR /app

# Copia os arquivos compilados da etapa anterior
COPY --from=build /app/publish .

# Define a porta da aplicação (Railway usa variável $PORT)
ENV ASPNETCORE_URLS=http://+:${PORT}

# Executa o JarbasBot
ENTRYPOINT ["dotnet", "JarbasBot.dll"]
